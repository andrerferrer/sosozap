<div class="container min-vh-100">

  <h1>#<%= @chatroom.name %></h1>
  <div id="messages" 
       class='overflow-auto' 
       data-chatroom-id="<%= @chatroom.id %>" 
       data-current-user-id="<%= current_user.id %>"
       style='height: 80vh;'>
    <% @chatroom.messages.each do |message| %>
    
      <% if message.user == current_user %>
          <%= render 'messages/message', message: message, css_class: 'sent-message' %>
      <% else %>
          <%= render 'messages/message', message: message, css_class: 'received-message' %>
      <% end %>
    
    <% end %>
  </div>


  <%= simple_form_for [@chatroom, @message], remote: true do |f| %>
    <%= f.input :content, 
                label: false, 
                placeholder: "O que vocÃª quer dizer para a SoSo agora?",
                autofocus: true %>
  <% end %>


</div>